{{ ansible_managed | comment }}

[Unit]
Description=Prometheus GitLab CI pipelines exporter
After=network-online.target

[Service]
Type=simple
User={{ gitlab_ci_pipelines_exporter_system_user }}
Group={{ gitlab_ci_pipelines_exporter_system_group }}
ExecStart={{ gitlab_ci_pipelines_exporter_binary_install_dir }}/gitlab_ci_pipelines_exporter \
{% if gitlab_ci_pipelines_exporter_names != [] -%}
    '--config.path=/etc/gitlab_ci_pipelines_exporter/config.yml' \
{% endif -%}
{% if gitlab_ci_pipelines_exporter_tls_server_config | length > 0 or gitlab_ci_pipelines_exporter_http_server_config | length > 0 or gitlab_ci_pipelines_exporter_basic_auth_users | length > 0 %}
    '--web.config.file=/etc/gitlab_ci_pipelines_exporter/web_config.yml' \
{% endif %}
    '--web.listen-address={{ gitlab_ci_pipelines_exporter_web_listen_address }}' \
    '--web.telemetry-path={{ gitlab_ci_pipelines_exporter_web_telemetry_path }}'

SyslogIdentifier=gitlab_ci_pipelines_exporter
Restart=always
RestartSec=1
StartLimitInterval=0

{% set ns = namespace(protect_home = 'yes') %}
{% for m in ansible_mounts if m.mount.startswith('/home') %}
{%   set ns.protect_home = 'read-only' %}
{% endfor %}
ProtectHome={{ ns.protect_home }}
NoNewPrivileges=yes

{% if (ansible_facts.packages.systemd | first).version is version('232', '>=') %}
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes
{% else %}
ProtectSystem=full
{% endif %}

[Install]
WantedBy=multi-user.target
